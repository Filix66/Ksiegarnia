<Window x:Class="Ksiegarnia.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ksiegarnia"
        mc:Ignorable="d"
        Title="BookWindow" Height="280" Width="200">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <Label>Book Name</Label>
            <TextBox x:Name="book_name"></TextBox>
            <Label>Author</Label>
            <TextBox x:Name="author_name"></TextBox>
            <Label>Description</Label>
            <TextBox x:Name="description_name"></TextBox>
            <Label>Book Id</Label>
            <TextBox x:Name="book_id"></TextBox>
        </StackPanel>

        <Button x:Name="Save" Grid.Row="1" Click="Save_Click">Save</Button>
        <Button x:Name="Cancel" Grid.Row="1" Grid.Column="2" Click="Cancel_Click">Cancel</Button>
    </Grid>
    
</Window>
